<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <style>
    main {
      background-color: #FFFFFE;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }
    .card {
      min-height: 180px;
      min-width: 250px;
      max-width: 300px;
    }
    .card-body {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      height: 100%;
    }
    .card-buttons {
      margin-top: auto;
    }
  </style>
</head>

<body class="">

  <div class="main form-floating m-5 mt-3">
    <p class="ms-3"><%= link_to 'ホームに戻る', '/'%></P>

    <h1>URLメモ帳</h1>
    <p><%= link_to '新規登録', new_todo_path %></p>
    <%# ここからループ %>
    <div class="row">
      <% @todos.each do |todo| %>
      <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
        <div class="card shadow-sm p-3 bg-body rounded">
          <div class="card-body">
            <h5 class="card-title"><%= todo.title %></h5>
            <p class="card-text"><%= todo.category %></p>
            <div class="card-buttons">
              <%= link_to "編集する", edit_todo_path(todo), class: 'btn btn-sm btn-default bg-primary text-white' %>
              <%= link_to '削除する', destroy_confirmation_path(todo), class: 'btn btn-sm btn-default bg-danger text-white', method: :delete, data: { confirm: '本当に削除しますか？' } %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>

    <p class="ms-3"><%= link_to 'ホームに戻る', '/'%></P>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
